    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program in nodemon",
            "program": "${workspaceFolder}/server.js",
            "runtimeExecutable": "nodemon",
            "env": {
                "NODE_ENV": "local",
            },
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}